{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "target": "ESNext"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}